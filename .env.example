# Environment variables for the Dental Lecture System

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/dental_lectures?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-change-in-production"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_WEBHOOK_SECRET="your-webhook-secret"
TELEGRAM_WEBHOOK_URL="https://your-domain.com/webhooks/telegram"

# File Storage Configuration
FILE_STORAGE_PATH="./uploads"
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES="pdf,ppt,pptx,doc,docx,txt"

# AWS S3 Configuration (Optional - for production)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="dental-lectures-storage"
USE_S3_STORAGE=false

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@dentallectures.com"

# Subscription & Payment Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Rate Limiting
RATE_LIMIT_WINDOW=15  # minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH="./logs"

# Admin Panel Configuration
ADMIN_JWT_SECRET="your-admin-jwt-secret-change-in-production"
ADMIN_SESSION_TIMEOUT=8  # hours

# AI Features Configuration (Future use)
OPENAI_API_KEY="your-openai-api-key"
AI_FEATURES_ENABLED=false

# Background Jobs Configuration
BULL_DASHBOARD_USER="admin"
BULL_DASHBOARD_PASS="change-in-production"

# Monitoring Configuration
ENABLE_PROMETHEUS_METRICS=true
METRICS_PORT=9090